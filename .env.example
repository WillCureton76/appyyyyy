# Core
PORT=8080
NODE_ENV=production
LOG_LEVEL=info
CORS_ORIGIN=*
# Optional: enforce a shared secret for /mcp, /sse, /messages
SHARED_SECRET=
# Optional DNS rebinding protection (comma-separated hostnames)
ENABLE_DNS_REBINDING_PROTECTION=false
ALLOWED_HOSTS=

# Database (Railway Postgres recommended)
DATABASE_URL=

# Notion OAuth
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=https://YOUR-RAILWAY-DOMAIN.up.railway.app/oauth/notion/callback
# Optional quick test
NOTION_STATIC_TOKEN=
# Optional: try PKCE for providers that support it (Notion may not)
NOTION_USE_PKCE=false
